<%= form_for(question, url: submit_question_path, method: 'post', class: 'mt-4') do |f| %>
    <div class="form-group">
      <label class="form_heading"><%= question.statement%></label>
      <div class="form-group">
        <div class=" show_ans_box">
          <i class="fa fa-arrow-right p-2 " aria-hidden="true"></i>
          <i class="fa fa-arrow-up p-2" aria-hidden="true"></i>
          <i class="fa fa-arrow-up p-2" aria-hidden="true"></i>
          <i class="fa fa-arrow-up p-2" aria-hidden="true"></i>
          <i class="fa fa-arrow-left p-2" aria-hidden="true"></i>
        </div>

      </div>

      <div class="row">
        <div class="col-4"></div>
        <div class="col-4"><input class="option-input dir_up" type="radio" name="dir_btn" value="up"></div>
        <div class="col-4"></div>

        <div class="col-4"><input class="option-input dir_left" type="radio" name="dir_btn" value="left"></div>
        <div class="col-4"></div>
        <div class="col-4"><input class="option-input dir_right" type="radio" name="dir_btn" value="right"></div>

        <div class="col-4"></div>
        <div class="col-4"><input class="option-input dir_down" type="radio" name="dir_btn" value="down"></div>
        <div class="col-4"></div>
      </div><!--/row-->

    </div>

    <div class="text-center">
      <a href="question_4.html" class="btn primery-gradient-l-r student_button">Submit</a>
    </div>

    <div class="Scream">
      <a href="#" data-toggle="modal" data-target="#ScreamModal">Scream</a>
    </div>

    <div class="modal fade" id="ScreamModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Are you sure?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary">Yes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
          </div>
        </div>
      </div>
    </div>
<% end %>




