<div class="container teams_container">

  <div class="row">
    <div class="col-sm-6 time_start ml-auto">
      <span id="ms_timer"></span>
    </div>

    <div class="col-sm-6">
      <div class="music_box row p-1">
        <div class="col-6 text-left p-0"><%= @audio&.audio_file_name %></div>
        <div class="w-100 text-center mt-3">

        <span class=""><%= link_to change_audio_game_path do %>
              <%= image_tag 'backward.png' %>
              <% end %>
        </span>

          <span> <audio id='audio'>
            <source src="<%= @audio&.audio&.url %>">
          </audio>

          <div class='btn-group btn-group-xs'>
            <a href='javascript:void(0)' class="btn btn-default play_pause" data-toggle="tooltip" title="Preview"><i id="stateicon" class="fa fa-play-circle"></i></a>
          </div>
           </span>

          <span class=""><%= link_to change_audio_game_path do %>
              <%= image_tag 'forward.png' %></span>
              <% end %>
            </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% @game.teams.each do |team| %>
        <div class="col-sm-6 score_clan <%= team.name %>">
          <h2><%= team.name.titleize %> <span>Hint:1</span></h2>
          <table width="100%">
            <tr>
              <td align="right" valign="bottom"><%= image_tag lock_image(team.questions.first), class: 'lock_img' %>4
              </td>
              <td><%= image_tag lock_image(team.questions.second), class: 'lock_img' %> W</td>
              <td><%= image_tag lock_image(team.questions.third), class: 'lock_img' %><%= image_tag 'direction_img.png' %></td>
              <td><%= image_tag lock_image(team.questions.fourth), class: 'lock_img' %> 3</td>
            </tr>
          </table>
        </div>
    <% end %>
  </div>

  <!--/score_clan-->
  <!--/row-->
  <div class="text-right">
            <span class="outer_btn text-center primery-gradient-l-r">
              <%= link_to 'javascript:void(0)', id: 'pause' do %>
                <%= game_state_button %>
              <% end %>
            </span>
  </div>
</div>

<script>
    $('#pause').on('click', function () {
        $.ajax({
            type: "GET",
            dataType: "script",
            url: "<%== switch_game_path(@game) %>",
            success: function (data) {
                console.log(data)
            }
        });
    });

    $('.play_pause').on('click', function () {
        aud_play_pause()
    });

    function aud_play_pause() {
        var myAudio = document.getElementById('audio');
        if (myAudio.paused) {
            $('#stateicon').removeClass('fa fa-play-circle');
            $('#stateicon').addClass('fa fa-pause-circle');
            myAudio.play();
        } else {
            $('#stateicon').removeClass('fa fa-pause-circle');
            $('#stateicon').addClass('fa fa-play-circle');
            myAudio.pause();
        }
    }

    $("#ms_timer").countdowntimer({minutes: 30, size: 'lg', pauseButton: "pause"});
</script>